	<script>
    function clear () {
      	if(window.confirm("Are you sure you want to clear the textbox?")) {
          	document.getElementById('txt').innerHTML = '';
        }
    }
	function backspace () {
  		let ktav = document.getElementById("ktav").innerHTML;

  		document.getElementById("ktav").innerHTML = ktav.substring(0, ktav.length - 1);
	}
	function typ (input) {
  		var ktav = document.getElementById("ktav").innerHTML;

    	document.getElementById("ktav").innerHTML = ktav + String.fromCharCode(input + 1488);
	}
	function space () {
  		document.getElementById('ktav').innerHTML += ' ';
	}
    function gematria () {

      	var ktav = document.getElementById('ktav').innerHTML;

      	var gematria = 0;

  		var letter = function (input) {
          	return String.fromCharCode( 1488 + input);
		}

  		ktav.split("").map( function(character) {
		//א
      		if (character == letter(0)) {
          		gematria += 1;
        	}
       	//ב
      		else if (character == letter(1)) {
          		gematria += 2;
        	}
        //ג
      		else if (character == letter(2)) {
          		gematria += 3;
        	}
        //ד
      		else if (character == letter(3)) {
          		gematria += 4;
        	}
		//ה
      		else if (character == letter(4)) {
          		gematria += 5;
        	}
        //ו
      		else if (character == letter(5)) {
          		gematria += 6;
        	}
        //ז
      		else if (character == letter(6)) {
          		gematria += 7;
        	}
        //ח
      		else if (character == letter(7)) {
          		gematria += 8;
        	}
        //ט
      		else if (character == letter(8)) {
          		gematria += 9;
        	}
        //י
      		else if (character == letter(9)) {
          		gematria += 10;
        	}
        //כ & ך
      		else if (character == letter(10) || character == letter(11)) {
          		gematria += 20;
        	}
        //ל
      		else if (character == letter(12)) {
          		gematria += 30;
        	}
        //מ & ם
      		else if (character == letter(13) || character == letter(14)) {
          		gematria += 40;
        	}
        //נ & ן
      		else if (character == letter(15) || character == letter(16)) {
          		gematria += 50;
        	}
        //ס
      		else if (character == letter(17)) {
          		gematria += 60;
        	}
        //ע
      		else if (character == letter(18)) {
        	  	gematria += 70;
        	}
        //פ & ף
      		else if (character == letter(19) || character == letter(20)) {
        	  	gematria += 80;
        	}
        //צ & ץ
      		else if (character == letter(21) || character == letter(22)) {
        	  	gematria += 90;
        	}
        //ק
      		else if (character == letter(23)) {
        	  	gematria += 100;
        	}
        //ר
      		else if (character == letter(24)) {
        	  	gematria += 200;
        	}
        //ש
      		else if (character == letter(25)) {
        	  	gematria += 300;
        	}
        //ת
      		else if (character == letter(26)) {
          		gematria += 400;
        	}
    	});
  		document.getElementById("output").innerHTML = gematria;
	}
	</script>
